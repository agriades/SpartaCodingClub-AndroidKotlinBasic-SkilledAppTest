<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_view_binder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="뷰바인더 활용: ViewBinderActivity"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_adapter_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="어댑터 뷰 활용: AdapterViewActivity"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@id/btn_view_binder"/>

    <Button
        android:id="@+id/btn_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="리사이클러 뷰 활용: RecyclerViewActivity"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@id/btn_adapter_view"/>

    <Button
        android:id="@+id/btn_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(fragment)"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@id/btn_recycler_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>