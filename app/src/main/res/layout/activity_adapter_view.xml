<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdapterViewActivity">

    <Button
        android:id="@+id/btn_simple_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="리스트뷰:\nListView"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_simple_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="간단한 그리드뷰:\nText GridView"
        android:layout_marginTop="20dp"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_simple_list_view"/>

    <Button
        android:id="@+id/btn_image_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이미지 그리드뷰:\nImage GridView"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@id/btn_simple_grid_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>